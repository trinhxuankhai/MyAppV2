<WindowManager>:
    id:sm
    Navigation:
    Waiting:
    ResultScreen:

<Random>:
    name: "random"
    md_bg_color: get_color_from_hex("#ffeea9")
    BoxLayout:
        orientation: "vertical"
        height: root.height
        width: root.width
        MDTopAppBar:
            id: toolbar
            elevation: 10
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x: app.Continue()]]
            right_action_items: [["redo-variant", lambda x: app.ReRandom()]]
            specific_text_color: 1,0,1,1
            md_bg_color: get_color_from_hex("#ffeea9")
        
        MDCard:
            MDRelativeLayout:
                MDSmartTile:
                    id: im_sync_1
                    radius: 24
                    box_radius: [0, 0, 24, 24]
                    box_color: get_color_from_hex("#ffeea9")
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: None, None
                    size: "320dp", "320dp"

                    MDIconButton:
                        id: iconbutton
                        icon: "heart"
                        theme_icon_color: "Custom"
                        icon_color: 1, 0, 0, 1
                        pos_hint: {"center_y": .5}
                    
                    MDLabel:
                        id: label1
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex("#000000")
                        bold: True

            
        MDBottomAppBar:
            MDTopAppBar:
                icon: "food"
                type: "bottom"
                mode: "center"
                md_bg_bottom_color: get_color_from_hex("#ffeea9")
                icon_color: get_color_from_hex("#d676ff")
                on_action_button: app.GoToNext()
        
<Waiting>:
    name: "wait"
    on_enter: self.ids.progress.start()
    md_bg_color: get_color_from_hex("#093161")
    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        BoxLayout:
            pos_hint:{"center_x": .5, "center_y": .5}
            Image:
                source: "./resources/cat.gif"
                allow_stretch: True
                anim_delay: 0.1
                mipmap: True
                keep_ratio: True
                size_hint_y: None
                size_hint_x: None
                width: self.parent.width
                height: self.parent.width/self.image_ratio
                pos_hint:{"center_x": .5, "center_y": .5}
        BoxLayout:
            pos_hint:{"center_x": .5, "center_y": .5}
            size_hint_x: 0.7
            size_hint_y: None
            height: self.minimum_height
            MDProgressBar:
                id: progress
                type: "indeterminate"
                pos_hint: {"center_y": .6}
                color: get_color_from_hex("#ffffff")
    